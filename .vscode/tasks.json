{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve Drafts",
            "type": "shell",
            "command": "hugo server -D",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "hugo",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Add Theme",
            "type": "shell",
            "command": "git submodule add ${input:repository} themes/${input:themeName}",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ],
    "inputs": [
        {
            "id": "repository",
            "description": "Respoitory URL, will be added as submodule",
            "type": "promptString"
        },
        {
            "id": "themeName",
            "description": "Respository alias to be used in Hugo configuration",
            "type": "promptString"
        }
    ]
}